@model IEnumerable<LimpiaMAS.Models.TbDetalleservicio>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
    <head></head>
    <body>
        <!--DATOS PARA PASAR A LA FUNCION PAGAR-->
        <input type="hidden" value=@ViewBag.CateServ name="CateServ"/>
        <input type="hidden" value=@ViewBag.FecServ name="FecServ" />
        <input type="hidden" value=@ViewBag.Guidetserv name="Guidetserv" />
        <input type="hidden" value=@ViewBag.IdCli name="IdCli" />
        <input type="hidden" value=@ViewBag.IdLimp name="IdLimp" />

        @foreach (var detalle in Model)
        {
            <form asp-action="Carrito" method="post">
                <label>Dentro de lista</label>
                <label>@detalle.IdDetserv</label>
                <label>@detalle.NomapeLim</label>
                <label>@detalle.NomapeCli</label>
                <label>@detalle.DirCli</label>
                <label>@detalle.CatServ</label>
                <label>@detalle.FecServ.ToString("dd/MM/yyyy")</label>
                <label>@detalle.DurServ</label>
                <label>@detalle.ImpServ</label>
                <label>@detalle.HoraDetserv</label>
                <a asp-action="Eliminar" asp-route-id="@detalle.IdDetserv">Eliminar</a>
                <a asp-action="Index">Regresar</a>
                <a asp-action="Pagar" asp-route-id="@detalle.IdDetserv">Pagar</a>
            </form>
        }
    </body>
</html>